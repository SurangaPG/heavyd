<?xml version="1.0" encoding="UTF-8" ?>

<project name="HeavyD - startup" default="info">
    <fail unless="seed.file" />

    <import file="${project.basedir}/.heavyd/vendor/heavyd/platform/lib/phing/startup.xml" />
    <property file="${seed.file}" />

    <target name="project:update" description="Adds some basics to a pre-existing project">
        <phingcall target="startup:basic-dirs"/>
        <phingcall target="startup:mirror-templates"/>
    </target>

    <target name="project:startup" description="sets up a heavyD drupal 8 project for the very first time. ">
        <phingcall target="startup:basic-dirs"/>
        <phingcall target="startup:mirror-templates"/>
        <phingcall target="startup:optional-files" />
    </target>

</project>
